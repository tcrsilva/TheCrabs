<style>
h1{
  text-align: center;
  padding:15px;
}

#calendar table {
border-collapse: collapse;
width: 100%;
}

#calendar td,
#calendar th {
font-family: "Lucida Grande",arial,helvetica,sans-serif;
font-size: 10px;
padding: 6px;
border: 1px solid #999;
}

#calendar th {
background: #DDD;
color: #666;
text-align: center;
width: 14.2857142857143%;
}

#calendar td {
background: #FFF;
color: #777;
height: 80px;
vertical-align: top;
font-size: 16px;
}

#calendar .notmonth {
color: #CCC;
}

#calendar #month {
margin: 0;
padding-top: 10px;
padding-bottom: 10px;
text-align: center;
}

#calendar #month a, #calendar #month a:hover {
text-decoration: none;
padding: 0 10px;
color: #999;
}

#calendar .today {
background-color: #D7F2FF;
}

#calendar ul {
margin: 0;
margin-top: 5px;
padding: 0;
list-style: none;
}

#calendar li {
margin: 0;
padding: 0;
font-size: 11px;
text-align: center;
}
</style>
<h1 class="display-4">Esse é o calendário de eventos do seu prédio! </h1>
<div id="calendar">
	<h2 id="month">
		<%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d") %>
		<%=h @date.strftime("%B %Y") %>
		<%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d") %>
	</h2>
	<%= calendar_for @eventos, :year => @date.year, :month => @date.month do |t| %>
	  <%= t.head('DOM','SEG', 'TER', 'QUA', 'QUI', 'SEX', 'SAB') %>
	  <%= t.day do |day, eventos| %>
	  <%= day.day %>
	  <% eventos.each do |eventos| %><br>
	<%= link_to h(eventos.titulo), eventos %><br>
	<%= link_to 'Editar', edit_evento_path(eventos) %> | <%= link_to 'Deletar', eventos, method: :delete, data: { confirm: 'Tem certeza?' } %>
	  <% end %>
	  <% end %>
	<% end %>
</div>
<br>
<%= link_to 'Novo Eventos', new_evento_path , class:"btn btn-primary btn-lg btn-block"%>
<%= link_to 'Voltar', login_useropc_path, class:"btn btn-secondary btn-lg btn-block"%>
<br>