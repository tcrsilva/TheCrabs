    <% else%>
        <%if !admin_signed_in? && user_signed_in? %>
            <h3><%= t('new.log') %><%= current_user.try(:email) %></h3><br>
            <p><%= link_to t('predios'), predios_path, class:"btn btn-danger",:style => "padding:4%;" %> <%= link_to t('calen'), eventos_path, class:"btn btn-success", :style => "padding:4%;" %></p>
            <p><%= link_to t('finances'), finances_path, class:"btn btn-dark",:style => "padding:4%;" %> <%= link_to t('newresident'), new_user_registration_path, class:"btn btn-warning", :style => "padding:4%;" %>
