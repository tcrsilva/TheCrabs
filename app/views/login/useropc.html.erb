<!-- ----------------------Cadastro SÃ­ndico, sair e logar do devise---------------------------------------------------------------------- -->
    <% if !user_signed_in? && !admin_signed_in?%> 
      <h5 style="padding: 1%"><%= t('pp') %></h5>
      <div style=" align-items: center; padding:1%; margin-right: 5%;" id="ocultar">
          <ul style="display: inline; text-decoration: none; list-style:none;"> 
            <li style="display: inline;"><%= link_to t('sindico'), new_admin_session_path, class:"btn btn-info", :style => "padding:4%;" %></li>
