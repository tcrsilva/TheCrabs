<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Anexar</h3>
  </div>
  <div class="panel-body">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
		  Upload Arquivo
		</button>
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Upload Arquivo</h4>
		      </div>
		      <div class="modal-body">
		        <%= form_tag({ action: :upload_arquivo }, { :multipart => true }) do |f| %>
		        	<%= file_field_tag 'arquivo[]', :multiple => true %>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
				        <%= submit_tag 'Anexar', class: "btn btn-primary", data: { disable_with: "Anexando..." } %>
				      </div>
		        <% end %>
		      </div>
		    </div>
		  </div>
		</div>
  </div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Arquivos Anexados</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
    	<thead>
    		<tr>
    			<th>Id</th>
    			<th>Diret√≥rio</th>
    		</tr>
    	</thead>
    	<tbody>
    		<% @arquivos.each do |arquivo| %>
	    		<tr>
	    			<td><%= arquivo.id %></td>
	    			<td><%= arquivo.diretorio_arquivo %></td>
	    			<td><%= button_to 'Baixar', { action: :download_arquivo, diretorio: arquivo.diretorio_arquivo }, class: 'btn btn-primary' %></td>
	    		</tr>
	    	<% end %>
    	</tbody>
    </table>
  </div>
</div>