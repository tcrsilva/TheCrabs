<!DOCTYPE html>
<html>
  <head>
    <title>The Crabs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
   
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <ul class="nav justify-content-end">
        <li>
          <%= link_to 'HOME', root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'PT', root_path(locale: 'pt-BR'), class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'EN', root_path(locale: 'en'), class:"nav-link" %>
        </li>
      </ul>
      <%= yield %>
    </div>
   <script>$.notify.addStyle("Acesso Concedido", "success");</script>
    
  </body>
</html>